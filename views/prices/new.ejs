<% layout('layouts/boilerplate') %> 

<h1>Add Prices</h1>

<div>
    <form action="/prices" method="POST">
        <label for="averagePrice">Average Price: </label>
        <input type="number" name="averagePrice" id="averagePrice" min="0"><br>
        <label for="minimumPrice">Minimum Price: </label>
        <input type="number" name="minimumPrice" id="minimumPrice" min="0"><br>
        <label for="maximumPrice">Maximum Price: </label>
        <input type="number" name="maximumPrice" id="maximumPrice" min="0"><br>
        <label for="marketName">Market Name: </label>
        <input type="text" id="marketName" name="marketName"><br>
        <label for="date">Date: </label>
        <input type="date" id="date" name="date"><br>
        <button>Submit</button>
    </form>
</div>